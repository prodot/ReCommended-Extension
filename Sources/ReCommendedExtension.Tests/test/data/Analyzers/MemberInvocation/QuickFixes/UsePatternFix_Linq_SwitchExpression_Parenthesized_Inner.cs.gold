using System.Linq;

namespace Test
{
    public class Methods
    {
        public void SingleOrDefault(int[] array, int fallback)
        {
            var result = array switch
            {
              [] => {caret}fallback + 1,
              [var item] => item,
              _ => throw new InvalidOperationException("List contains more than one element.")
            };
        }
    }
}